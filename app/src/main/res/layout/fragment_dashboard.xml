<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".Fragments.DashboardFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Greeting -->
            <TextView
                android:id="@+id/greetingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, Asma 👋"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="16dp" />

            <!-- Motivation -->
            <TextView
                android:id="@+id/motivationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today’s a new chance to grow."
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp" />

            <!-- Progress Overview Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/taskProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✅ Tasks Completed: 0 / 0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/streakText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔥 0-day streak"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/voiceLogCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎙️ 0 recording today"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Recent Voice Logs -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎧 Recent Voice Logs"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="32dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recordingsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="12dp" />

            <!-- Quick Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:weightSum="3"
                android:paddingHorizontal="4dp">

                <Button
                    android:id="@+id/addTaskButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Add Task" />

                <Button
                    android:id="@+id/recordAudioButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Record Audio"
                    android:layout_marginHorizontal="4dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
